# Auto detect text files and perform LF normalization
* text=auto

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# JSON
*.json text eol=lf

# Python
*.py text eol=lf

# Binary files (do not diff)
*.zip binary
*.gz binary
*.tar binary
*.png binary
*.jpg binary
*.jpeg binary

# Lock files (generated, don't diff)
.terraform.lock.hcl linguist-generated=true
